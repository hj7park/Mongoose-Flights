<!DOCTYPE html>
<html>
  <head>
    <title>Jay Air</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>All flights</h1>
    <% flights.forEach(function(flight){ %>
      <% if(flight.departs < Date.now()) { %>
        <p style="color:red;"> 
      <% } else { %>
        <p> 
      <% } %>
        <%= flight.airline %>
        <%= flight.airport %>
        <%= flight.flightNo %>
        <%= flight.departs %>
        <a href="/flights/<%= flight._id %>">Details</a>
      </p>
    <%})%>
    <p><a href="/flights/new">Add Flight</a></p>
  </body>
</html>
